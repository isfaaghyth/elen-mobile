<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_history_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:foreground="?selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/viewDueDate"
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/appAccent"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/txtTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunday, 01-Jan-2017"
                        android:textSize="12sp"
                        android:ellipsize="end"
                        android:layout_marginEnd="5dp"
                        android:textColor="@color/grey_500"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/txtCourseName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Mata Kuliah"
                        android:textSize="16sp"
                        android:ellipsize="end"
                        android:textColor="@color/semiBlack"
                        android:textStyle="bold"
                        android:maxLines="1"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtCourseCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3214"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/badge_course_count"
                    android:layout_marginEnd="10dp"
                    android:maxLines="1"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_200"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>